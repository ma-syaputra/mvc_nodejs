<% include ./../template/header %>
<% include ./../template/nav %>
<div class="container">
        <h2>Edit User</h2>
        <form action="/users/update_post" method="POST">
            <input type="hidden" class="form-control" id="id" placeholder="id" name="id" value="<%= users[0].id %>">
          <div class="form-group">
            <label for="username">Username:</label>
            <input type="text" class="form-control" id="username" placeholder="Enter Username" name="username" value="<%= users[0].username %>">
          </div>
          <div class="form-group">
            <label for="nama">Name:</label>
            <input type="text" class="form-control" id="nama" placeholder="Enter Name" name="nama" value="<%= users[0].name %>">
          </div>
          <div class="form-group form-check">
            <label class="form-check-label">
              <input class="form-check-input" type="checkbox" name="remember"> Remember me
            </label>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
<% include ./../template/footer %>
